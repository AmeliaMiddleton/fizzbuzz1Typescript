{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "nodenext",
    "target": "es2022",
    "lib": ["es2022"],

    "strict": true,
    "sourceMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
